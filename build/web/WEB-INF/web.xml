<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControladorSesion</servlet-name>
        <servlet-class>practica3.Controladores.ControladorSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorContratacion</servlet-name>
        <servlet-class>practica3.Controladores.ControladorContratacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorHistorialLaboral</servlet-name>
        <servlet-class>practica3.Controladores.ControladorHistorialLaboral</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorOperacionesHistorial</servlet-name>
        <servlet-class>practica3.Controladores.ControladorOperacionesHistorial</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorSesion</servlet-name>
        <url-pattern>/ControladorSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorContratacion</servlet-name>
        <url-pattern>/ControladorContratacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorHistorialLaboral</servlet-name>
        <url-pattern>/ControladorHistorialLaboral</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorOperacionesHistorial</servlet-name>
        <url-pattern>/ControladorOperacionesHistorial</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
